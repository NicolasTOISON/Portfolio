---
import Category from "./Category.astro";

export interface PostPreview {
    title: string;
    description: string;
    heroImage: string;
    category: string;
    categoryColor: string;
    slug: string;
}


const { title, description, heroImage, category, categoryColor, slug} = Astro.props;
---

<article class="blog-container">
    <div class="first-row">
        <img src={heroImage} alt="logo"/>
    </div>
    <a href={`/blog/${slug}/`}>
        <div class="preview-info">
            <h3>{title}</h3>
            <Category name={category} color={categoryColor}/>
            <p>{description}</p>
        </div>
    </a> 
</article>

<style is:global>
    .blog-container {
        display: grid;
    }
    .blog-container:hover {
        border: solid 1px #1D2656;
    }
    .blog-container:first-child {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        column-gap: 2rem;
        grid-column-start: 1;
        grid-column-end: 4;
        padding-bottom: 2rem;
        border-bottom: solid 1px #1D2656;
    }
    .blog-container:first-child > .first-row {
        grid-column-start: 1;
        grid-column-end: 3;
    }
    .blog-container:first-child > .first-row > img {
        width: 100%;
    }
    .blog-container:first-child > a {
        grid-column-start: 3;
        grid-column-end: 4;
    }
    .blog-container:not(:first-child) {
        display: grid;
        padding-top: 2rem;
    }
    .preview-info > h3 {
        margin-bottom: 0.75rem;
    }
    .preview-info > *:last-child {
        margin: 0.5rem 0rem 0rem 0rem;
    }
</style>