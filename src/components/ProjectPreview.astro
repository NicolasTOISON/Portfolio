---
import Category from "../components/Category.astro";

export interface ProjectTile {
  name: string;
  excerpt: string;
  logoPath: string;
  category: string;
}

const { name, excerpt, category, slug } = Astro.props;
let categoryColor = undefined;

switch (category) {
  case "web":
    categoryColor = "#44CB8A";
    break;
  case "kubernetes":
    categoryColor = "#FDD263";
    break;
  case "typescript":
    categoryColor = "#FD6363";
    break;
  case "vscode":
    categoryColor = "#F987E6";
    break;
  case "admin-system":
    categoryColor = "#EB8D48";
    break;
  case "react":
    categoryColor = "#B7E13F";
    break;
  case "agile":
    categoryColor = "#3FE1D8";
    break;
  default:
    categoryColor = "#44CB8A";
}
---

<article class="project-container">
  <a href={slug} target="_blank"
    ><div class="first-row">
      <Category name={category} color={categoryColor} />
    </div>
    <div class="preview-info">
      <h3>{name}</h3>
      <p>{excerpt}</p>
    </div></a
  >
</article>
<style is:global>
  .project-container {
    display: grid;
    border: solid 1px #1d2656;
    > a {
      text-decoration: none;
    }
  }
  .project-container:hover {
    background-color: #1d2656;
    & > a > .first-row > * {
      background-color: #0c102c;
    }
  }
  .project-container:first-child {
    display: grid;
    grid-column-start: 1;
    grid-column-end: 3;
  }
  a > .first-row {
    display: grid;
    right: 0;
    padding: 24px 0px 0px 24px;
  }
  .first-row div:last-child {
    justify-self: end;
  }
  a > .preview-info {
    padding: 64px 24px 24px 24px;
  }
  a > .preview-info > *:last-child {
    margin-top: 8px;
  }
  @media only screen and (min-device-width: 320px) and (max-device-width: 768px) {
    .project-container {
      display: grid;
      border: solid 1px #1d2656;
      > a {
        text-decoration: none;
      }
    }
    .project-container:hover {
      background-color: #1d2656;
      & > a > .first-row > * {
        background-color: #0c102c;
      }
    }
    .project-container:first-child {
      display: grid;
    }
    a > .first-row {
      display: grid;
      right: 0;
      padding: 24px 0px 0px 24px;
    }
    .first-row div:last-child {
      justify-self: end;
    }
    a > .preview-info {
      padding: 2rem 24px 24px 24px;
    }
    a > .preview-info > *:last-child {
      margin-top: 8px;
    }
  }



  @media only screen and (min-device-width: 769px) and (max-device-width: 1024px) {
  }

  /* Desktops and laptops ----------- */
  @media only screen and (min-device-width: 1025px) {
  }
</style>
