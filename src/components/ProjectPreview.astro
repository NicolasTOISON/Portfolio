---
import Category from "../components/Category.astro";

export interface ProjectTile {
  name: string;
  excerpt: string;
  logoPath: string;
  category: string;
}

const { name, excerpt, category, slug } = Astro.props;
let categoryColor = undefined;

switch (category) {
  case "web":
    categoryColor = "#44CB8A";
    break;
  case "kubernetes":
    categoryColor = "#FDD263";
    break;
  case "seo":
    categoryColor = "#FDD263";
    break;
  case "e-commerce":
    categoryColor = "#FDD263";
    break;
  case "sea":
    categoryColor = "#FD6363";
    break;
  case "lean":
    categoryColor = "#F987E6";
    break;
  case "scrum":
    categoryColor = "#EB8D48";
    break;
  case "kanban":
    categoryColor = "#B7E13F";
    break;
  case "agile":
    categoryColor = "#3FE1D8";
    break;
  default:
    categoryColor = "#44CB8A";
}
---

<article class="project-container">
  <a href={slug} target=""
    ><div class="first-row">
      <!-- <img src={logoPath} alt="logo" /> -->
      <Category name={category} color={categoryColor} />
    </div>
    <div class="preview-info">
      <h3>{name}</h3>
      <p>{excerpt}</p>
    </div></a
  >
</article>
<style is:global>
  .project-container {
    display: grid;
    border: solid 1px #1d2656;
  }
  .project-container:hover {
    background-color: #637ffd;
  }
  .project-container:first-child {
    display: grid;
    grid-column-start: 1;
    grid-column-end: 3;
  }
  a > .first-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    right: 0;
    padding: 24px 0px 0px 24px;
  }
  .first-row div:last-child {
    justify-self: end;
  }
  a > .preview-info {
    padding: 64px 24px 24px 24px;
  }
  a > .preview-info > *:last-child {
    margin-top: 8px;
  }
</style>
