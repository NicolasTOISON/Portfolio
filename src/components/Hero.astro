<style>
  .homepage-container {
    height: 100vh;
    background: linear-gradient(180deg, #0c102c 0%, rgba(12, 16, 44, 0) 20%);
  }
  lottie-player {
    z-index: -1;
    position: absolute;
    top: 0;
    right: 0;
    width: 87%;
  }
  .hero-container {
    position: relative;
    left: 11rem;
    font-size: 4rem;
    font-weight: 500;
    width: 40%;
