---
import Button from './Button.astro'


type Section = {
  id: string,
  header:string
  withButton?: boolean
  buttonLink?: string
  iconPath?: string
  buttonText?: string
}
const { id, header, withButton = false, buttonLink, iconPath, buttonText } = Astro.props
---

<section id={id}>
  <div class="heading-container"><h2>{header}</h2>
    {withButton ?
    <Button href={buttonLink}
          icon={iconPath}>{buttonText}</Button> : <></>}</div>
  <slot />
  {withButton ?
    <Button href={buttonLink}
          icon={iconPath}>{buttonText}</Button> : <></>}
</section>
<style is:inline>
  .heading-container {
 /*  position: relative; */
  display: inline-flex;
  align-items: center;
  height: 3.5rem;
  width: 100%;
  & > a {
    position: absolute;
    right: 3rem;
  }
}
@media only screen and (min-device-width: 320px) and (max-device-width: 1024px) {
  .heading-container {
    & > a:nth-child(2){
      display: none;
    }
  }
}

@media only screen and (min-device-width: 481px) and (max-device-width: 768px) {
  .heading-container {
    & > a:nth-child(2){
      display: none;
    }
  }
}

@media only screen and (min-device-width: 769px) and (max-device-width: 1024px) {
  .heading-container {
    & > a:nth-child(2){
      display: none;
    }
  }
}

  /* Desktops and laptops ----------- */
@media only screen and (min-device-width: 1025px) {
  #blog {
    & > a:last-child{
      display: none;
    }
  }
}
</style>
