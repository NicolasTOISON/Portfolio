---
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";

const { hidden } = Astro.props;
---

<header class:list={['main-navbar', { hidden }]}>
  <Logo bordered />
  <nav>
    <HeaderLink href="/" icon="/icons/home.svg" class="icon">HOME</HeaderLink>
    <HeaderLink href="/about" icon="/icons/user.svg" class="icon">
      ABOUT ME
    </HeaderLink>
    <HeaderLink href="/blog" icon="/icons/comment.svg" class="icon">
      BLOG
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    display: inline-flex;
    flex-direction: column;
  }
  .hidden{
    display: none;
  }
  nav {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
  }
  nav a:first-child {
    margin-top: 32px;
  }
  nav a {
    margin-bottom: 32px;
  }
</style>
