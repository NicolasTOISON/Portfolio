---
const { href, icon, text, class: className, ...props } = Astro.props
---

<a href={href} class:list={[className]} {...props}>
  <img src={icon} alt="link icon" />
  <slot />
</a>
<style>
  a {
    color: white;
    padding: 12px 16px;
    background-color: #637ffd;
    font-size: 1rem;
    font-weight: 100;
    box-shadow: 6px 6px #3f5de2;
    display: inline-flex;
    text-decoration: none;
    text-transform: uppercase;
    justify-content: center;
    align-items: center;
    > img {
      filter: invert(1);
      padding-right: 12px;
      height: 1rem;
      width: 1rem;
    }
  }
  a:active {
    transform: translateX(6px) translateY(6px);
    box-shadow: none;
  }
  .secondary {
    color: black;
    padding: 12px 16px;
    background-color: white;
    font-size: 1rem;
    font-weight: 100;
    box-shadow: 6px 6px #1d2656;
    display: inline-flex;
    text-decoration: none;
    text-transform: uppercase;
    justify-content: center;
    align-items: center;
    max-height: 24px;
    > img {
      filter: invert(0);
      padding-right: 12px;
      height: 1rem;
      width: 1rem;
    }
  }
</style>
