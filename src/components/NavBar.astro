---
import HeaderLink from './HeaderLink.astro'
import Logo from './Logo.astro'
import SocialLinks from './SocialLinks.astro'

const { border, position, showSocial } = Astro.props
---

{border ? <Logo bordered /> : <Logo />}
<nav class:list={[position]}>
  <HeaderLink href="/" icon="/icons/home.svg" class="icon">Accueil</HeaderLink>
  <HeaderLink href="/a-propos" icon="/icons/user.svg" class="icon">
    A propos
  </HeaderLink>
  <HeaderLink href="/blog" icon="/icons/comment.svg" class="icon">
    Blog
  </HeaderLink>
</nav>
{showSocial ? <SocialLinks /> : <div />}
<style>
  .top {
    position: absolute;
    right: 64px;
  }

  .left {
    position: relative;
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .left > a:first-child {
    margin-top: 32px;
  }
  .left > a {
    margin-bottom: 32px;
    margin-left: 48px;
  }
</style>
