---
import NavBar from "./NavBar.astro";

const { hidden } = Astro.props;
---

<header class:list={["left-navbar", { hidden }]} >
  <NavBar border position="left" showSocial />
</header>
<style>
  header {
    position: fixed;
    height: 100vh;
    top: 0;
    left: 0;
    display: inline-flex;
    flex-direction: column;
    border-right: solid 1px #1d2656;
    max-width: 255px;
  }
  .hidden {
    display: none;
  }
  @media only screen and (min-device-width: 320px) and (max-device-width: 480px) {
    header {
      display: none;
    }
  }

  @media only screen and (min-device-width: 481px) and (max-device-width: 768px) {
