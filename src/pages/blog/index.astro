---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import BaseHead from "../../components/BaseHead.astro";
import LeftBar from "../../components/LeftBar.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import RightBar from "../../components/RightBar.astro";
import Category from "../../components/Category.astro";
import Separator from "../../components/Separator.astro";
import Header from "../../components/Header.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.updatedDate.valueOf() - b.data.updatedDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <LeftBar />
    <RightBar />
    <main class="content-container">
      <section>
        <ul>
          {
            posts.map((post) => (
              <>
                <li>
                  <a href={`/blog/${post.slug}/`}>
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.updatedDate?.toLocaleDateString("fr-fr", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      })}
                    </time>
                    <h3>{post.data.title}</h3>
                    <Category
                      name={post.data.category}
                      color={post.data.categoryColor}
                    />
                  </a>
                </li>
                <Separator />
              </>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
    <style>
      .hero-navbar{
        display: none;
      }
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
      a {
        display: inline-flex;
        width: 100%;
        position: relative;
        text-decoration: none;
        align-items: center;
        > *:last-child {
          position: absolute;
          right: 0;
        }
      }
      @media only screen and (min-device-width: 320px) and (max-device-width: 480px) {
        ul li time {
          flex: 0 0 2rem;
        }
        a {
          flex-direction: column;
          text-decoration: none;
          align-items: unset;
          > *:last-child {
            position: relative;
            right: 0;
          }
        }
      }

      @media only screen and (min-device-width: 481px) and (max-device-width: 768px) {
      }

      @media only screen and (min-device-width: 769px) and (max-device-width: 1024px) {
      }

      /* Desktops and laptops ----------- */
      @media only screen and (min-device-width: 1025px) {
      }
    </style>
  </body>
</html>
