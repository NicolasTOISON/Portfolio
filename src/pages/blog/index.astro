---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import BaseHead from "../../components/BaseHead.astro";
import LeftBar from "../../components/LeftBar.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import RightBar from "../../components/RightBar.astro";
import Category from "../../components/Category.astro";
import Separator from "../../components/Separator.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.updatedDate.valueOf() - b.data.updatedDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </head>
  <body>
    <LeftBar />
    <RightBar />
    <main class="content-container">
      <section>
        <ul>
          {
            posts.map((post) => (
              <>
                <li>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.updatedDate?.toLocaleDateString("fr-fr", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </time>
                  <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                  <Category
                    name={post.data.category}
                    color={post.data.categoryColor}
                  />
                </li>
                <Separator />
              </>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body><style>
    li {
      display: inline-flex !important;
      width: 100%;
      position: relative;
      > *:last-child {
        position: absolute;
        right: 0;
      }
    }
  </style>
</html>
